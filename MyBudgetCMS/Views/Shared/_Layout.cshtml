@using System.Web.Optimization
@using System.Configuration;
<!DOCTYPE html>
<html>
<head>

    @{
        var adminName = ConfigurationManager.AppSettings["AdminName"];
        var domain = ConfigurationManager.AppSettings["Domain"];
    }

    <link rel="shortcut icon" href="#">
    <meta name="viewport" content="width=device-width" />
    <title>@adminName </title>
    
    @*@Styles.Render("~/bundles/admin/css")*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/sb-admin.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-left" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="~/Admin/Activities">פעילויות</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" data-toggle="modal" data-target="#logoutModal">יציאה</a>
                </div>
            </li>
        </ul>

        <!-- Navbar Search -->
        @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "d-none d-md-inline-block form-inline mr-auto ml-0 ml-md-3 my-2 my-md-0" }))
        {
            <div class="input-group">
                <input type="text" id="main-search" class="form-control" placeholder="חפש..." aria-label="Search" name="searchStr" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        }

        <a class="navbar-brand mr-1" href="@domain">@adminName</a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fa fa-bars" aria-hidden="true"></i>
        </button>

    </nav>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="content-wrapper">
            <!-- Icon Cards-->
            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>
                            זכויות יוצרים © אבי אמן פתרונות דיגיטליים
                        </span>
                    </div>
                </div>
            </footer>
        </div>
        <ul id="sidebar-nav" class="sidebar navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="@domain">
                    <span>מסך ראשי</span>
                    <i class="fa fa-tachometer" aria-hidden="true"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Admin/MonthlyBudget">
                    <span>הכנסות</span>
                    <i class="fa fa-circle" aria-hidden="true"></i>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="~/Admin/PaymentPerMonth">
                    <span>הוצאות</span>
                    <i class="fa fa-circle" aria-hidden="true"></i>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="~/Admin/Category">
                    <span>קטגוריות</span>
                    <i class="fa fa-circle" aria-hidden="true"></i>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="~/Admin/TypeOfPayment">
                    <span>סוגי תשלומים</span>
                    <i class="fa fa-circle" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
        <!-- /.content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a id="topBtn" class="scroll-to-top rounded">
        @*<i class="fas fa-"></i>*@
        <i class="fa fa-arrow-up" aria-hidden="true"></i>

    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">מוכן לצאת ?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">לחץ על כפתור היציאה בכדי לצאת.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">ביטול</button>
                    <a class="btn btn-primary" href="~/Account/Logout">יציאה</a>
                </div>
            </div>
        </div>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>

@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/admin/scripts")

